    <script>
        function setMood(mood) {
            const suggestions = {
                'stressed': 'Try a breathing meditation to relax.',
                'anxious': 'Visualize a calm ocean with a mantra meditation.',
                'low-energy': 'Use a gentle Om chanting session to recharge.',
                'focused': 'Continue with your current focus practice.',
                'calm': 'Maintain balance with a short reflection exercise.'
            };
            document.getElementById('moodSuggestion').textContent = suggestions[mood];
        }
        const toggle = document.querySelector('.menu-toggle');
        const menu = document.querySelector('.nav-menu');
        toggle.addEventListener('click', () => {
            menu.classList.toggle('active');
        });
    </script>
